<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndScreen">

    <RelativeLayout
        android:layout_width="377dp"
        android:layout_height="101dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="31dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/scrollView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="146dp"
            android:text="Add to Favourites"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032" />

        <ImageView
            android:id="@+id/fav"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/textView1"
            android:layout_weight="1000"
            android:clickable="true"
            android:src="@drawable/ic_add_black_24dp">

        </ImageView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="191dp"
            android:layout_height="22dp"
            android:layout_below="@+id/textView1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="127dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/myfav"
            android:text="My Favourites" />

        <ImageView
            android:id="@+id/myfav"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:layout_below="@+id/fav"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1000"
            android:clickable="true"
            android:contentDescription="show the favs"
            android:src="@drawable/ic_favorite_black_24dp"></ImageView>


    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="399dp"
        android:layout_height="482dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="5dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>